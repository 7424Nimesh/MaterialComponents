<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ryan_ronalds" />

        <LinearLayout
            android:id="@+id/llSocial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivFacebook"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@color/colorFacebook"
                android:scaleType="center"
                android:src="@drawable/ic_facebook" />

            <ImageView
                android:id="@+id/ivMedium"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@color/colorPorcelain"
                android:scaleType="center"
                android:src="@drawable/ic_medium" />

            <ImageView
                android:id="@+id/ivLinkedIn"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@color/colorFlamingo"
                android:scaleType="center"
                android:src="@drawable/ic_linkedin" />

            <ImageView
                android:id="@+id/ivGithub"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@color/colorYellow"
                android:scaleType="center"
                android:src="@drawable/ic_github" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:text="ABOUT DEVELOPER" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="@string/about_me" />

    </LinearLayout>
</ScrollView>
